<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/songsFragment">
    <fragment
        android:id="@+id/songsFragment"
        android:name="com.zionhuang.music.ui.fragments.songs.SongsFragment"
        android:label="@string/title_songs" />
    <fragment
        android:id="@+id/artistsFragment"
        android:name="com.zionhuang.music.ui.fragments.songs.ArtistsFragment"
        android:label="@string/title_artists">
        <action
            android:id="@+id/action_artistsFragment_to_artistSongsFragment"
            app:destination="@id/artistSongsFragment">
            <argument
                android:name="artistId"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/channelsFragment"
        android:name="com.zionhuang.music.ui.fragments.songs.ChannelsFragment"
        android:label="@string/title_channels" />
    <fragment
        android:id="@+id/playlistsFragment"
        android:name="com.zionhuang.music.ui.fragments.songs.PlaylistsFragment"
        android:label="@string/title_channels" />
    <fragment
        android:id="@+id/explorationFragment"
        android:name="com.zionhuang.music.ui.fragments.ExploreFragment"
        android:label="@string/title_explore">
        <action
            android:id="@+id/action_explorationFragment_to_searchSuggestionFragment"
            app:destination="@id/suggestionFragment"
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.zionhuang.music.ui.fragments.SettingsFragment"
        android:label="@string/title_settings" />
    <fragment
        android:id="@+id/suggestionFragment"
        android:name="com.zionhuang.music.ui.fragments.SuggestionFragment">
        <action
            android:id="@+id/action_suggestionFragment_to_searchResultFragment"
            app:destination="@id/searchResultFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/fragment_close_enter"
            app:popExitAnim="@anim/fragment_close_exit"
            app:popUpTo="@id/explorationFragment">
            <argument
                android:name="searchQuery"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/searchResultFragment"
        android:name="com.zionhuang.music.ui.fragments.SearchResultFragment"
        android:label="Search Result">
        <argument
            android:name="searchQuery"
            app:argType="string" />
        <action
            android:id="@+id/action_searchResultFragment_to_searchSuggestionFragment"
            app:destination="@id/suggestionFragment"
            app:enterAnim="@anim/fragment_close_enter"
            app:exitAnim="@anim/fragment_close_exit"
            app:popEnterAnim="@anim/fragment_open_enter"
            app:popExitAnim="@anim/fragment_open_exit" />
    </fragment>
    <fragment
        android:id="@+id/songDetailsFragment"
        android:name="com.zionhuang.music.ui.fragments.songs.SongDetailsDialog"
        android:label="SongDetailsFragment">
        <argument
            android:name="songId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/artistSongsFragment"
        android:name="com.zionhuang.music.ui.fragments.songs.ArtistSongsFragment">
        <argument
            android:name="artistId"
            app:argType="integer" />
    </fragment>
</navigation>