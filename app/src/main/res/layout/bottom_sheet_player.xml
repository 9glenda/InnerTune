<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:behavior_hideable="true"
    app:behavior_peekHeight="96dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <com.google.android.exoplayer2.ui.AspectRatioFrameLayout
        android:id="@+id/player_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_video"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false" />
    </com.google.android.exoplayer2.ui.AspectRatioFrameLayout>

    <TextView
        android:id="@+id/mini_song_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:ellipsize="none"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/mini_song_artist"
        app:layout_constraintEnd_toStartOf="@+id/mini_play_pause_btn"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/player_frame"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mini_song_artist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="none"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="?android:textColorSecondary"
        app:layout_constraintBottom_toTopOf="@+id/guideline_text"
        app:layout_constraintEnd_toEndOf="@+id/mini_song_title"
        app:layout_constraintStart_toStartOf="@+id/mini_song_title"
        app:layout_constraintTop_toBottomOf="@+id/mini_song_title" />

    <ProgressBar
        android:id="@+id/player_mini_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/guideline_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="98dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/mini_play_pause_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:tint="?android:textColorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/guideline_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_black_24dp" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/guideline_text"
        android:layout_above="@id/player_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="48dp" />
</androidx.constraintlayout.widget.ConstraintLayout>